{
  "manifest_version": 3,
  "name": "JobJourney Assistant",
  "version": "1.0.1",
  "description": "Help you search and track job applications across multiple platforms",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "system.display",
    "activeTab",
    "notifications"
  ],
  "host_permissions": [
    "*://*.linkedin.com/*",
    "*://*.indeed.com/*",
    "*://*.seek.com.au/*",
    "*://*.seek.co.nz/*",
    "*://*.reed.co.uk/*",
    "*://*.workopolis.com/*",
    "http://localhost:5001/*",
    "https://*.jobjourney.me/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/*",
        "https://*.seek.com.au/*",
        "https://*.seek.co.nz/*",
        "https://*.indeed.com/*",
        "https://*.reed.co.uk/*",
        "https://*.workopolis.com/*",
        "http://localhost:5001/*",
        "https://*.jobjourney.me/*"
      ],
      "js": [
        "helpers/jobScrapers.js",
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/*.js",
        "src/config/*.js",
        "src/services/*.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  }
}