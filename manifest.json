{
  "manifest_version": 3,
  "name": "JobJourney Assistant",
  "version": "1.0.2",
  "description": "Help you search and track job applications across multiple platforms",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "system.display",
    "activeTab",
    "notifications",
    "sidePanel"
  ],
  "host_permissions": [],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "JobJourney Assistant"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/*",
        "https://*.seek.com.au/*",
        "https://*.seek.co.nz/*",
        "https://*.indeed.com/*",
        "https://*.reed.co.uk/*",
        "https://*.workopolis.com/*",
        "http://localhost:5001/*",
        "https://*.jobjourney.me/*"
      ],
      "js": [
        "helpers/jobScrapers.js",
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/*.js",
        "src/config/*.js",
        "src/services/*.js",
        "background/*.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  }
}